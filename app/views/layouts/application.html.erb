<!DOCTYPE html>
<html>
<head>
  <title>JobsJugaad</title>
  <%= stylesheet_link_tag "ui-lightness/jquery-ui-1.8.23.custom.css", "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
  <div id = "header">
    <h1><%= t('heading') %></h1>
    <%= link_to 'Home', root_path %>
    <%= link_to "English", :locale => "en" %>
    <%= link_to "हिंदी", :locale => "hi" %>
    <%= link_to "FAQs", faqs_path %>
  </div>

  <% unless current_user.nil? %>
    <div id="logged_in_holder"> 
      <p> Logged in as <%= link_to current_user.email, get_path %> | <%= link_to 'Log Out', logout_path %></p>
    </div>
  <% end %>
  <% if is_admin? %>
    <div id="logged_in_holder"> 
      <p> Logged in as <%= link_to current_admin.email, admin_admin_profile_path %> | <%= link_to 'Log Out', logout_path %>
      </p>
    </div>
  <% end %>
  <div class = "part">
    <% flash.each do |key, msg| %>
      <div class="alert alert-block" id = <%= key %>>
        <button type="button" class="close" data-dismiss="alert">×</button>
        <%= msg %>
    <% end %>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
