<!DOCTYPE html>
<html>
<head>
  <title>JobsJugaad</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id = "header">
    <h1> Welcome to Jobs Jugaad </h1>
    <%= link_to 'Home', root_url %>
  </div>
  <% unless current_user.nil? %>
    <div id="logged_in_holder"> 
      <p> Logged in as <%= link_to current_user.email, get_path() %> | <%= link_to 'Log Out', logout_path %>
    </div>
  <% end %>
  <%= params %>
  <%= session %>
<%= yield %>
</body>
</html>
