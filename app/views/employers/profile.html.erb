<% if session[:id].nil? || session['user_type'] != 'employer' %>
  <center>
    <div id="not_login">
    <p>
      You are not currently logged into the system...
      <br />Please click <%= link_to 'here', elogin_path %> to login
    </p>
    </div>
  </center>
<% else %>
  <div id="logged_in_holder"> 
    <p> Logged in as <%= link_to current_user.email, eprofile_path %> | <%= link_to 'Log Out', logout_path %>
  </div>
  <br />
  <br />
  <div id = "main-container">
    <h3> Welcome <%= current_user.name %></h3>
    <fieldset class="profile-fieldset" id="profile-info">
      <legend id="profile-info-legend">Your Profile Information</legend>
      <% unless notice.nil? %>
        <div id = "notice"> <%= notice %> </div>
      <% end %>
      <div id="profile-container">
        <div id="links_to_use">
          <%= link_to 'Change Password', "" %>
          <%= link_to 'Edit', emp_edit_path %>
        </div>
        <div id = "profile_div">
        <h5> Your Profile Information : </h5>
        <div id = "profile-image">
         <%= image_tag current_user.photo.url(:small) %>
          <ul>
            <li><%= link_to 'Change Image', "" %></li>
            <li><%= link_to 'Remove Image', remove_photo_emp_path %></li>
          </ul>
        </div>
        <div id="profile_table">
          <table>
            <tr><td> Name:   </td><td><%= current_user.name %></td></tr>
            <tr><td> Email:  </td><td><%= current_user.email %></td></tr>
            <tr><td> Website:</td><td><%= link_to current_user.website, current_user.website %></td></tr>
            <tr><td> Description: </td><td><%= current_user.description %></td></tr> 
          </table>
        </div>
      </div>
    </fieldset>
    <fieldset class="profile-fieldset"><legend>Your Job Postings...</legend>
      <table>
        <% current_user.jobs.each do |job| %>
            <tr>
              <td> Job # <%= current_user.jobs.index(job) + 1 %></td>
              <td>
                <%= link_to 'Show', job %>
                <%= link_to 'Edit', edit_job_path(job) %> 
                <%= link_to 'Delete Job', job, :method => :delete, :confirm => "Are You Sure to delete this job?" %>
                <%= link_to 'View Job Seekers', view_applicants_path(:id => job.id) %>
              </td>
              </tr>
            <tr><td> Job Description : </td><td> <%= job.description %></td></tr>
            
        <% end %>
      </table>
      <%= link_to "Post a New Job", add_job_path %>
    </fieldset>
    <fieldset class="profile-fieldset">
      <legend>Search For Talent</legend>
      <%= form_tag %>
    </fieldset>
  </div>
<% end %> 