<% unless session[:id].nil? %>
  <br /><br />
  <div id="logged-in">
    <p> You are Already Logged in </p>
  </div>
<% else %>
  <fieldset>
    <legend><%= t('login_as_employer') %></legend>
    <div id="login">
      <%= form_tag(:controller => "sessions", :action => "login") do %>
        <table>
          <tr>
            <td><%= label_tag :email, t(:enter_email) %></td>
            <td><%= email_field :email, params[:email], :placeholder => t(:enter_email) %></td>
          </tr>
          <tr>
            <td><%= label_tag :password, t(:enter_password) %></td>
            <td><%= password_field_tag :password, nil, :placeholder => t(:enter_password) %></td>
          </tr>
          <tr>
            <td><%= hidden_field_tag :user_type, ActiveSupport::Base64.encode64("employer") %></td>
          </tr>
          <tr>
            <td></td><td><%= submit_tag t(:login) %></td>
          </tr>
        </table>
        <%= link_to t('forgot_password'), forgot_password_path(:user => "Employer") %>
        <%= link_to t('registration'), register_employers_path %>
      <% end %>
  </fieldset>
<% end %>