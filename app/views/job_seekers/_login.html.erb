<div id="login" style="float:left; width:50%">
  <% if notice %>
    <div id="notice">
      <p><%= notice %></p>
    </div>
  <% end %>
  <h2>Login to get started....</h2>
    <%= form_tag(:controller => "JobSeekers", :action => "login") do %>
      <table>
        <tr>
          <td><%= label_tag :email, "Enter Email" %></td>
          <td><%= email_field :email, params[:email] %></td>
        </tr>
        <tr>
          <td><%= label_tag :password, "Enter Password" %></td>
          <td><%= password_field_tag :password %></td>
        </tr>
        <tr>
          <td></td><td><%= submit_tag "Login" %></td>
        </tr>
      </table>
    <% end %>
<%= link_to "Forgot Password?", forgot_password_path %> <br />
<%= link_to 'Login As Employer' %><br />
<%= link_to 'New User', register_path %>
</div>
