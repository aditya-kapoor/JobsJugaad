<%= form_for(@admin, :url => "/admin") do |f| %>
  <% if @admin.errors.any? %>
    <div class="error_messages">
     <h2><%= pluralize(@admin.errors.count, "error") %> prohibited the details from being saved:</h2>
    </div>
  <% end %>
  <fieldset>
    <legend>Registration Of New Admin</legend>
    <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
      <% unless error_present?(:name, @admin) %>
        <td class="error-notice"><%= get_errors(:name, @admin) %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email %></td>
      <% unless error_present?(:email, @admin) %>
        <td class="error-notice"><%= get_errors(:email, @admin) %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
      <% unless error_present?(:password, @admin) %>
        <td class="error-notice"><%= get_errors(:password, @admin) %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
      <% unless error_present?(:password_confirmation, @admin) %>
        <td class="error-notice"><%= get_errors(:password_confirmation, @admin) %></td>
      <% end %>
    </tr>
    <tr>    
      <td></td>
      <td><%= f.submit %></td>
    </tr>
  </fieldset>
<% end %>