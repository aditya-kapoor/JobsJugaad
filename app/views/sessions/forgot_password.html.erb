<fieldset>
  <legend>Forgot Password Page</legend>
  <div id = "forgot-password">
    <%= form_tag(:controller => "sessions", :user => @par, :action => "reset_password") do %>
    <table>
      
      <tr>

        <td><%= label_tag :email, "Enter Email" %></td>
        <td><%= email_field_tag :email, nil, :placeholder => "Enter Email" %></td>
        <td><%= submit_tag "Send Password" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</fieldset>