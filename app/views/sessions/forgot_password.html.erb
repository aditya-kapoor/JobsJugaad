<fieldset>
  <legend><%= t('forgot_password')%></legend>
  <div id = "forgot-password">
    <%= form_tag(:controller => "sessions", :user => @par, :action => "reset_password") do %>
    <table>
      <tr>
        <td><%= label_tag :email, t('enter_email') %></td>
        <td><%= email_field_tag :email, nil, :placeholder => t('enter_email') %></td>
        <td><%= submit_tag t('send_password') %></td>
      </tr>
      <% end %>
    </table>
  </div>
</fieldset>